
namespace suma3;
public partial class MainPage : ContentPage
{
    public MainPage()
    {
        InitializeComponent(); // Este método conecta el XAML con el código C#
    }
    private void OnSumarClicked(object sender, EventArgs e)
    {
        double numero1 = double.Parse(entradaNumero1.Text);
        double numero2 = double.Parse(entradaNumero2.Text);
        double suma = numero1 + numero2;
    }
}
      